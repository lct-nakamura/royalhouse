
html
    &.is-fixed
        position fixed
        overflow hidden
        width 100%
        height 100%

html
body
    width 100%
    +lg()
        -webkit-overflow-scrolling touch
        overflow-scrolling touch

body
    position relative
    font-family 'メイリオ', 'Meiryo', 'Meiryo UI', Osaka, "ＭＳ Ｐゴシック", "ヒラギノ角ゴ Pro W3", sans-serif
    font-size 16px
    color blk
    font-weight 400
    line-height 2
    letter-spacing .04em
    +sm()
        font-size 14px
    &.is-fixed
        position fixed
        overflow hidden
        width 100%
        height 100%
        .l-header
            +md()
                position fixed


section
    position relative
    padding 30px 0
    +md()
        padding 20px 0

ol
ul
    list-style none
    padding 0
    margin-bottom 0
    &.is-indent-1
        padding-left 1em
        li
            text-indent -1em
    &.is-indent-2
        padding-left 2em
        li
            text-indent -2em

dl
    margin-bottom 0

a
    color blu
    text-decoration underline
    transition .2s
    img
        transition .2s
    &:hover
        color blu
        text-decoration none
        img
            opacity .8
    &.tel-link
        color blk
        text-decoration none
        pointer-events none
        +sm()
            color blu
            text-decoration underline
            pointer-events fill
    .icon
        transition .2s

button
    appearance none
    background transparent
    border 0
    &:focus
        outline none
        box-shadow none

img
    max-width 100%

figure
    margin 0
    img
        max-width 100%

svg
    display block

