.l-nav
    position fixed
    top 0
    right 0
    display block
    width 340px
    height 100%
    background transparent
    box-shadow -10px 0 10px -5px rgba(#000,.2)
    font-size 14px
    overflow auto
    transform:translateX(100vw)
    //overflow-scrolling touch
    transition .3s
    backface-visibility hidden
    visibility hidden
    z-index -1
    +md()
        width 100%
        transform:translateX(100%)
    &.is-show
        background rgba(#fff,.95)
        transform none
        visibility visible
        z-index 3

.nav__btn--close
    position absolute
    top 0
    right 0
    width 68px
    height 68px
    background #e0e3d9
    color grn
    &:hover
        cursor pointer
        opacity .8
    span
        position: absolute;
        top: 50%
        left: 50%
        display: block
        width: 41px
        height: 6px
        background: grn
        border-radius 6px
        margin: auto
        transform: translate(-50%,-50%)
        transform-origin: top left
        transition .3s
        opacity 0
        &:first-of-type
            opacity 1
            transform: rotate(45deg) translate(-50%, -50%);
        &:last-of-type
            opacity 1
            transform: rotate(-45deg) translate(-50%, -50%);

.nav__container
    padding 120px 10px 0

.nav__ttl
    font-size 17px
    font-weight bold
    text-align center
    margin-bottom 25px

.nav__btn--yt
    display flex
    align-items center
    justify-content center
    border 1px solid red
    border-radius .5rem
    color red
    font-weight bold
    padding .75rem 1.2rem
    margin -1rem auto 3rem
    transition .3s
    &:hover
        background red
        color #fff
        i
            svg
                fill #fff
    i
        width 24px
        height 16.8px
        margin-right 10px
        svg
            fill red
            transition .3s
    span
        line-height 1
        margin-top 2px

.nav-sec
    padding 0 30px
    margin-bottom 40px
    .nav-sec__ttl
        font-size 17px
        color red
        font-weight bold
        border-bottom 2px dotted #a7a7a7
        padding-bottom .5em
        margin-bottom 1em

.nav__list
    .nav__item
        margin-bottom 12px
        .nav__link
            display flex
            align-items center
            color blk
            text-decoration none
            line-height 1.4
            &::before
                flex none
                content ''
                display block
                width 18px
                height 28px
                background-image url(../images/balloon2.png)
                background-size contain
                background-repeat no-repeat
                margin-right 5px
                opacity .5
                transition .2s
            &:hover
                text-decoration underline
                &::before
                    opacity 1
                .icon
                    opacity 1
            &.nav__link--2
                color grn
                font-size 16px
                font-weight bold
                &::before
                    display none
            .icon
                flex none
                width 18px
                fill grn
                opacity .6
                margin-right 7px
                transition .2s
            p
                margin-bottom 0

.nav-sns
    background #e0e3d9
    padding 20px 40px
    .nav-sns__list
        display flex
        align-items center
        justify-content center
        margin-right -18px
    .nav-sns__item
        margin-right 18px
    .nav-sns__link
        display block
        width 30px
        fill #585555
        &.brand-twitter:hover
            fill #1DA1F2
        &.brand-facebook:hover
            fill #1877f2
        &.brand-line:hover
            fill #01B921
        &.brand-instagram:hover
            fill #CC39A3
        &.brand-youtube:hover
            fill #FF2905