        &:hover
            .map-balloon__link
                opacity 1
                visibility visible
                transform none
        &.is-show
            .map-balloon__link
                opacity 1
                visibility visible
                transform none
                p
                    opacity 1
                    visibility visible
                    transform none
        .map-balloon__link
            position absolute
            &:hover
                p
                    opacity 1
                    visibility visible
                    transform none
            &::before
                position relative
                flex none
                content ''
                display block
                width 38px
                height 66px
                background-image url(../images/balloon.png)
                background-size contain
                background-repeat no-repeat
                z-index 1
            p
                position absolute
                top 0
                left 18px
                display flex
                align-items center
                justify-content center
                height 46px
                background #fff
                border 3px solid red
                border-radius 5px
                opacity 0
                visibility hidden
                overflow hidden
                font-size 13px
                font-weight bold
                color blk
                text-align center
                white-space nowrap
                text-decoration none
                line-height 1.2
                padding 4px 10px 0 20px
                transform translateX(-18px)
                transition 1s
                +md()
                    background rgba(#fff,.6)
                    border-color rgba(red,.5)
                    font-size 11px
                    opacity 1
                    visibility visible
                    transform none