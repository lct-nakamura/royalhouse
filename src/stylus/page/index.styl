.main-map
    //display flex
    align-items center
    justify-content center
    height calc(100vh - 82px)
    overflow auto
    +md()
        width 100%
        height calc(100vh - 70px)
    .main-map__container
        position relative
        display block
        width 100%
        height calc(100vh - 82px)
        margin 0 auto
        +md()
            width calc((2116 * (100vh - 70px)) / 1525)
            height calc(100vh - 70px)
        .main-map__bg
            position absolute
            top 0
            left 0
            width 100%
            height calc(100vh - 82px)
            +md()
                height calc(100vh - 70px)
        img
            display block
            width 100%
            height auto
            margin 0 auto
    .map-balloon
        position absolute
        top 0
        display flex
        align-items flex-start
        cursor pointer
        &.pt01
            top 26vw
            left 52%
        &.pt02
            top 5vw
            left 47%
        &.pt03
            top 10vw
            left 24%
        &.pt04
            top 23vw
            left 30%
        &.pt05
            top 41vw
            left 76%
        &.pt06
            top 18vw
            left 21%
        &.pt07
            top 45vw
            left 52%
        &.pt08
            top 25vw
            left 76%
        &.pt09
            top 33vw
            left 43.8%
        &.pt10
            top 19vw
            left 67%
        &.pt11
            top 10vw
            left 77%
        &.pt12
            top 37vw
            left 54%
        &.pt13
            top 20vw
            left 44%
        &.pt14
            top 38vw
            left 27%
