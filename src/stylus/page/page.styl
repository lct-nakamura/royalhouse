#acMenu
    width: 670px
    margin: 0 auto
    dt
        display:block
        font-weight: bold
        padding-bottom: 8px
        margin-bottom: 8px
        border-bottom: 2px solid #333
        padding-top: 8px
        position: relative;
        &:after
            content: '▼';
            position: absolute;
            right: 20px;
            top:10px;
    dd
        display:none;
        padding-bottom: 24px
        a
            display: inline-block;
            margin-right: 8px;
            margin-bottom: 8px;
            border-radius: 8px;
            padding:6px 16px;
            background: #1D945C;
            color:#fff;
            border: 1px solid #1D945C;
            transition: 0.3s;
            text-decoration:none;
            &:hover
                background: #fff;
                color: #1D945C;
    dt.active:after
            content: '▲';
@media screen and (max-width:678px)
  #acMenu
    width: 92%
    margin: 0 auto
